{
  "compilerOptions": {
    "importHelpers": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [ "es6", "dom" ],
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "baseUrl": "./",
    "paths": {
      "@app-models/*": [ "src/app/models/*" ],
      "@app-services/*": [ "src/app/services/*" ],
      "@app-helpers/*": [ "src/app/helpers/*" ],
      "@app-shared/*": [ "src/app/shared/*" ],
      "@app-spidimages/*": [ "src/styles/spid-img/*" ],
      "@app-federaimages/*": [ "src/styles/federa-img/*" ]
    }
  },
  "exclude": [ "bin", "node_modules" ],
  "atom": { "rewriteTsconfig": false }
}
